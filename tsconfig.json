{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@worker-tools/kv-storage": ["./node_modules/@worker-tools/cloudflare-kv-storage"],
      "perf_hooks": ["./src/vendor/perf_hooks.js"],
    },
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "WebWorker",
      "ESNext.AsyncIterable",
      "DOM",
      "DOM.Iterable",
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "checkJs": true,
    "types": [
      "@cloudflare/workers-types",
    ],
  },
  "include": [
    "typings/*.d.ts",
    "src/*.ts",
    "src/**/*.ts", 
    "src/routes/.login.ts",
    "src/routes/.crawl.ts",
  ],
  "exclude": [
    "node_modules/",
    "dist/",
    "**/dist/",
    "**/node_modules/",
    "**/worker/",
    "_*",
    "**/_*"
  ]
}
{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      // "@worker-tools/kv-storage": ["./node_modules/kv-storage-polyfill/dist/kv-storage-polyfill.mjs"],
      // "perf_hooks": ["./src/vendor/perf_hooks.js"],
      "linkedom": ["./src/vendor/no-linkedom.ts"],
      "device-detector-js": ["./src/vendor/no-device-detector.ts"],
    },
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2018",
    "lib": [
      "ES2021",
      "WebWorker",
      "ESNext.AsyncIterable",
      "DOM",
      "DOM.Iterable",
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "checkJs": true,
    "types": [
      "@types/node",
    ],
  },
  "include": [
    "typings/*.d.ts",
    "src/*.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules/",
    "dist/",
    "**/dist/",
    "**/node_modules/",
    "**/worker/",
    "_*",
    "**/_*"
  ]
}